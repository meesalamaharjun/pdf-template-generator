<section>
  {{#with difficulty}}
    <p class="title">Difficulty and Skill Analysis</p>
    <div class="divider"></div>
    <p class="subtitle"></p>
    <div class="justifyCenter">
      {{#each difficulty}}
        <div class="donutContainer">
          <p class="smallDescription">Score</p>
          <p class="subtitle-2">{{score}}/{{total}}</p>
          <svg width="160" height="160" xmlns="http://www.w3.org/2000/svg">
            <g transform="translate(81,81)">
              <text
                alignment-baseline="middle"
                dominant-baseline="middle"
                text-anchor="middle"
                style="color: white"
                class="svgText"
                fill="white"
              >
                {{roundIt percentage}}%
              </text>
              <circle
                id="circle"
                style="stroke-dashoffset: 0; stroke-opacity: 0.7"
                class="donut"
                r="69.85699"
                stroke-width="14"
                stroke="#E06B39"
                fill="none"
              ></circle>
              <circle
                id="circle"
                style="stroke-linecap: round"
                stroke-dashoffset={{scoreCircleOffset percentage}}
                class="donut"
                r="69.85699"
                stroke-width="6"
                stroke="#ffffff"
                fill="none"
              ></circle>
            </g>
          </svg>
          <p class="description" style="margin-top: 5px">{{title}}</p>
        </div>
      {{/each}}
    </div>
    {{#if message }}
    <div class="banner" style="margin: 20px">
      <img class="hornImage" src="https://dx5zlk5th4g9t.cloudfront.net/bdt2.0-assets/horn.png" />
      <p class="description">
        {{message}}
      </p>
    </div>
    {{/if}}
    {{/with}}
    {{#with skill}}
    <p class="subtitle">Skill-wise accuracy</p>
    <div class="justifyCenter">
      {{#each skill}}
        <div class="donutContainer">
          <p class="smallDescription">Score</p>
          <p class="subtitle-2">{{score}}/{{total}}</p>
          <svg width="160" height="160" xmlns="http://www.w3.org/2000/svg">
            <g transform="translate(81,81)">
              <text
                alignment-baseline="middle"
                dominant-baseline="middle"
                text-anchor="middle"
                style="color: white"
                class="svgText"
                fill="white"
              >
                {{roundIt percentage}}%
              </text>
              <circle
                id="circle"
                style="stroke-dashoffset: 0; stroke-opacity: 0.7"
                class="donut"
                r="69.85699"
                stroke-width="14"
                stroke="#E06B39"
                fill="none"
              ></circle>
              <circle
                id="circle"
                style="stroke-linecap: round"
                stroke-dashoffset={{scoreCircleOffset percentage}}
                class="donut"
                r="69.85699"
                stroke-width="6"
                stroke="#ffffff"
                fill="none"
              ></circle>
            </g>
          </svg>
          <p class="description" style="margin-top: 5px">{{title}}</p>
        </div>
      {{/each}}
    </div>
    <div class="bottom-messages">
    {{#if @root.skill.message}}
    <div class="banner" style="margin: 20px">
      <img class="hornImage" src="https://dx5zlk5th4g9t.cloudfront.net/bdt2.0-assets/horn.png" />
      <p class="description">
        {{@root.skill.message}}
      </p>
    </div>
    {{/if}}
    <div class="callout">
      We understand that inconsistent learning habits during the pandemic seem
      to have taken a toll on {{@root.full_name}}â€™s comprehensive conceptual understanding and
      ability to apply those to challenging situations
    </div>
    </div>
  {{/with}}
</section>